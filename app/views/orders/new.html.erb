
<div class="bg-log-backgroud">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-4">
        <div class="card" style="margin-top: 20px">

          <% if @car.photos.any? %>
            <%=  cl_image_tag @car.photos.first.key, crop: :fill, class: 'card-img-top' %>
          <%  else %>
             <%= image_tag "car.jpg", class: "card-img-top" %>
          <%  end %>

          <div class="card-body">
            <h5 class="card-title"><strong>Dados da compra:</strong></h5>
            <p><strong>Marca:</strong> <%= @car.brand %></p>
            <p><strong>Modelo:</strong> <%= @car.mod %></p>
            <p><strong>Vendedor:</strong> <%= @car.user.first_name %></p>
            <p><strong>Pre√ßo:</strong> R$<%= @car.price %></p>
            <%= simple_form_for [@car, @order] do |f| %>
            <%= f.submit 'Confirmar compra', class: 'btn btn-primary' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
