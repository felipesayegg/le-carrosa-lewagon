<div class="container d-flex justify-content-center flex-column">
  <div class="highlights-section">
    <h1>Minhas compras</h1>
    <div class="cards">
      <% @orders.each do |order| %>
      <% if order.car.user != current_user   %>
        <div class="card">
          <div class="img">
            <%= cl_image_tag order.car.photos.first.key, crop: :fill, class: "img" if order.car.photos.any? %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= order.car.mod %></h5>
              <p id="card-text-brand" class="card-text"><%= order.car.brand %></p>
              <p class="card-text"><strong>Comprador:</strong> <%= order.car.user.first_name %></p>
              <p class="card-text"><strong>Data:</strong> <%= order.created_at.to_s.slice(0, 10) %></p>
              <p class="card-text"><strong>Valor:</strong> R$<%= order.car.price %>0</p>
              <%= link_to "Ver mais", order_path(order), class: "btn btn-primary" %>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>


</div>
