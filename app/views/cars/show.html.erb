<div class="container mt-5 pb-3">
  <div class="row">
    <% @car.photos.each do |photo|%>
      <div class="col-md-4 mb-3">
        <div class="img" style="padding: 10px;">
            <%= cl_image_tag photo.key, width: 400, height: 160, crop: :fill %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container-fluid mb-0">
 <div class="row mt-5 pt-5" id="espaçamento-infos-esquerda" style="background-color: #fdf0cc">
    <div class="col-6">
      <h1><strong> Modelo do carro </strong> </h1>
        <h3><%= @car.brand %> <%= @car.mod %> <%= @car.year %></h3>
        <p><strong>Descrição:</strong> <%= @car.description %></p>
        <p><strong>Kilômetros:</strong> <%= @car.km %></p>
        <p><strong>Vendedor:</strong> <%= @car.user.email %></p>
      <%= link_to 'Back', cars_path %>
        <% if @car.user == current_user %>
          <%= link_to 'editar carro', edit_car_path(@car), class: "btn btn-warning" %>
          <%= link_to  car_path(@car), data: {turbo_method: :delete}, class: "card-icon" do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>
        <% end %>

      </div>

    <div class="col-6 d-flex justify-content-end">
      <div class="row me-3" id="espaçamento-infos-direita">
        <div class="col-6">
          <h1><strong> Valor </strong></h1>
          <h3> <%= number_to_currency(@car.price) %></h3>
          <% if user_signed_in? %>
            <% if @car.user != current_user %>
              <%= link_to 'Comprar', new_car_order_path(@car), class: "btn btn-success btn.lg btn m-5" %>
            <% end %>
          <% else %>
            <%= link_to 'Comprar', new_car_order_path(new_user_session_path), class: "btn btn-success btn.lg btn m-5" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
