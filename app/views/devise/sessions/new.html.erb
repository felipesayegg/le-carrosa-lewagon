
<div class="bg-log-backgroud">
<div class="container">
  <div class="row justify-content-center" >
    <div class="col-4">
      <div class="card" >
        <%= image_tag "car.jpg", class: "card-img-top" %>
        <div class="card-body">
          <h5 class="card-title">Por favor, fa√ßa seu login para continuar sua compra.</h5>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, label: 'E-mail',
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password, label: 'Senha',
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, label: 'Lembrar de mim', as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions form-flex ">
            <%= f.button :submit, "Entrar", class: "btn btn-login" %>
            <%= link_to "Cadastrar", new_user_registration_path, class: "btn btn-signup" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>

<div class="container d-flex justify-content-center">
  <div class="form-card">
    <div class="title">
      <h5 class="card-title">Digite o seu e-mail e senha.</h5>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <div class="e-mail-input">
          <%= f.input :email,
          required: true,
          autofocus: true,
          input_html: { autocomplete: "email" } %>
        </div>
        <div class="pass-input">
          <%= f.input :password,
          required: false,
          input_html: { autocomplete: "current-password" } %>
        </div>
        <div class="remember-box">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

        </div>
      </div>
      <div class="form-actions form-flex ">
        <%= f.button :submit, "Entrar", class: "btn btn-primary login-btn" %>
        <%= link_to "Cadastrar", new_user_registration_path, class: "btn btn-outline-primary signup-btn" %>
      </div>
    <% end %>
    <div class="forgot-pass-link">
      <%= render "devise/shared/links" %>
    </div>
    </div>
  </div>
</div>
 
