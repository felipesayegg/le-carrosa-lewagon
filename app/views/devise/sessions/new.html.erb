<div class="bg-log-backgroud">
<div class="container">
  <div class="row justify-content-center" >
    <div class="col-4">
      <div class="card" >
        <%= image_tag "car.jpg", class: "card-img-top" %>
        <div class="card-body">
          <h5 class="card-title">Por favor, fa√ßa seu login para continuar sua compra.</h5>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, label: 'E-mail',
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password, label: 'Senha',
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, label: 'Lembrar de mim', as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions form-flex ">
            <%= f.button :submit, "Entrar", class: "btn btn-login" %>
            <%= link_to "Cadastrar", new_user_registration_path, class: "btn btn-signup" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
